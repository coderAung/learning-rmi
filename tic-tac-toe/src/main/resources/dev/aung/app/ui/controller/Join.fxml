<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dev.aung.app.ui.controller.Join">
   <children>
      <Label text="Enter host ip address">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <VBox maxWidth="250.0">
         <children>
            <TextField fx:id="ipAddress" maxWidth="300.0" promptText="198.168.100.66" />
            <Label fx:id="message" />
         </children>
      </VBox>
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <Button id="Home" fx:id="cancel" mnemonicParsing="false" text="Cancel" />
            <Button mnemonicParsing="false" onAction="#join" text="Join" />
         </children>
      </HBox>
   </children>
</VBox>
